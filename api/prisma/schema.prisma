generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @unique
  created_at DateTime @default(now())
  rides      Ride[]

  @@map("users")
}

model Driver {
  id           String   @id @unique
  name         String
  description  String
  car          String
  price_per_km Float
  min_distance Int
  rides        Ride[]
  reviews      Review[]

  @@map("drivers")
}

model Ride {
  id         String   @id @default(uuid())
  user_id    String
  user       User?     @relation(fields: [user_id], references: [id])
  driver_id  String
  driver     Driver?   @relation(fields: [driver_id], references: [id])
  date       DateTime @default(now())
  origin     String
  destination String
  distance   Int
  duration   String
  value      Float

  @@map("rides")
}

model Review {
  id        String @id
  driver_id String
  driver    Driver? @relation(fields: [driver_id], references: [id])
  rating    Int
  comment   String

  @@map("reviews")
}
